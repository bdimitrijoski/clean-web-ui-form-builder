{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "outDir": "dist/lib",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "sample"],
  "compileOnSave": false,
  "buildOnSave": false
}
